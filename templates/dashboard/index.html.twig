{% extends 'base.html.twig' %}
{% block title %}Mon compte{% endblock %} 

{% block body %}
<body class="dashboard-wrapper">
 
        <div class=" row bg-dark dashboard-bg pt-5">
            <div class="p-5">
                <h1 class=" m-5">Bienvenue chez vous</h1>
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="mt-5">
                            <a class="btn btn-light" href="/admin">Dashboard admin</a>
                            </div>
                        {% endif %} 
            </div>
                <div class="col-md-4 offset-4  p-4">
                    <div class="row my-4">
                        
                            <div class="col-md-10 offset-1"><h2>Vos informations de compte </h2> </div><div class="col-md-1"><a href="#"><i class="fa fa-edit" style="font-size:30px"></i></a></div>
                            <hr>
                            <p>Nom: {{ app.user.nom | capitalize}}</p>
                            <hr>
                            <p>Prénom: {{ app.user.prenom | capitalize}}</p>
                            <hr>
                            <p>Téléphone: {{ app.user.telephone }}</p>
                            <hr>
                            <p>Email: {{ app.user.email }}</p>
                            <hr>

                    </div>
                </div>

        </div>

</body>

{% endblock %}
