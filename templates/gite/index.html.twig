{% extends 'base.html.twig' %}

{% block title %}Hello GiteController!{% endblock %}

{% block body %}
<div class="container mt-5 centralcontent">

    {% for gite in gites|reverse %}

    <div class="card flex-row article"><img class="card-img-left example-card-img-responsive img-fluid"
            src="" height="30%" width="30%" />
        <div class="card-body">
            <h4 class="card-title h5 h4-sm">{{ gite.titre }}</h4>
            <p class="card-text">{{ gite.description|slice(0, 30) }}...</p>
            <a href="/gite/{{gite.id}}" class="btn btn-primary">Voir l'annonce</a>
        </div>
    </div>

    {% endfor %}

</div>
{% endblock %}