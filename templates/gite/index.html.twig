{% extends 'base.html.twig' %} 

{% block title %}Hello GiteController!{% endblock %} 

{% block stylesheets %}
    {{ parent() }}
    <style>
        body{
            font-family: Helvetica, Arial, sans-serif;
        }
        .corp{
            color: rgba(0, 0, 0, 0.5);
            border-radius: 20px;
        } 
        .card{
            border-radius: 20px;
        }
        .first{
            background-color: lightgray;
            padding: 20px;
            border-radius: 20px;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="container entete mt-5">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="first text-center">Les <span style="color: rgba(0, 0, 0, 0.5);">engagements</span> Gîte Mandarine</h2>
            </div>
        </div>
        <div class="row" style="color: rgba(0, 0, 0, 0.5);">
            <div class="col-4 mt-3">
                <img style="height: 100px;" src="{{ asset('/build/photos/kisspng-handshake-clip-art-logo-stock-photography-vector-g-startups-ch-wir-helfen-neugrnderinnen-aus-leide-5d059cac5a7743.7505357115606488763706.png') }}" alt="">
                <p class="mt-3">Gîtes Mandarine, le leader français du tourisme chez l’habitant depuis plus de 50 ans</p>
            </div>
            <div class="col-4 mb-5 mt-3">
                <img style="height: 100px;" src="https://cdn-icons-png.flaticon.com/512/13/13979.png" alt="">
                <p class="mt-3">Des hébergements visités et contrôlés selon un référentiel de classement national</p>
            </div>
            <div class="col-4 mb-5 mt-3">
                <img style="height: 100px;" src="{{  asset('/build/photos/cltp4g0m565n2gbm2ks5lv6226.png') }}" alt="">
                <p class="mt-3">Des centaines de collaborateurs au sein de nos agences locales à votre service avant, pendant et après votre séjour.</p>
            </div>
        </div>
    </div>
    <hr style="color: rgba(0, 0, 0, 0.5); height:3px; width:70%; margin:auto">
    <form action="" method="" class="col-6 offset-3">
        <div class="row">
            <div class="col-10 mt-5">
                <label for="search" style="color: rgba(0, 0, 0, 0.5);"><strong>Destination</strong></label>
                <input list="villes" type="text" class="form-control mt-2" id="search" placeholder="Où allez-vous ?">
                <datalist id="villes">
                    <option value="Marseille">
                    <option value="Lyon">
                    <option value="Paris">
                    <option value="Bordeaux">                       
                </datalist>
            </div>
            <div class="col-2 mt-5"><br>
                <button type="submit" class="btn btn-secondary mt-2">Rechercher</button>
            </div>  
        </div>      
    </form>

    <div class="container mt-5 px-5 py-5 corp">
    <div class="row col">
        {% for gite in gites|reverse %}
        <div class="col-xl-4 col-md-6 col-sm-12 my-3 article">
            <div class="card bg-light mb-3" style="height: 500px;">
                <div class="card-header">
                    <strong>VILLE</strong><br>
                    <p>Nombres chambres, <strong>100,00 € / nuit</strong></p>
                    <small>Note en étoile à voir..</small>
                </div>
                <a href="/gite/{{ gite.id }}">
                    <img src="https://images.pexels.com/photos/186077/pexels-photo-186077.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Image de l'annonce {{ gite.titre }}" style="height:200px; width: 100%;"/>
                </a>
                <div class="card-body">
                    <h4 class="card-title">
                        {{ gite.titre|slice(0, 20) }}
                    </h4>
                    <p class="card-text mt-3 mb-4">{{ gite.description|slice(0, 30) }}...</p>
                    <a href="/gite/{{ gite.id }}" class="btn btn-secondary my-2">Voir l'annonce</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    </div>
{% endblock %}
