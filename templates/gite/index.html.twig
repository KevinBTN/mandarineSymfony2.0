            </div>
        </div>
    </div>
</div>
<br>
<div class="container col-6 offset-3">
    {{ form_start(form) }}

    <div class="row">
        
            {{ form_row(form.emplacement) }}
            {{ form_row(form.nbchambremin) }}
            <div class="col">
            {{ form_row(form.minPrice) }}
            </div>
            <div class="col">
            {{ form_row(form.maxPrice) }}
            </div>
        

        <div class="row">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Rechercher</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

